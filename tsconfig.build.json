{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "removeComments": true
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dist",
    "**/*.scss",
    "**/*.css"
  ]
}
